{
  "name": "AWS Buddy",
  "description": "AWS console helper",
  "short_name": "AWS Buddy",
  "permissions": ["activeTab", "storage", "alarms", "tabs", "extension"],
  "browser_action": {
    "default_title": "AWS Extend Switch Roles",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.console.aws.amazon.com/*"
      ],
      "all_frames": false,
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "js/attach_target.js"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+K"
      }
    }
  },
  "manifest_version": 2,
  "background": {
    "scripts":["background.js"]
  }
}
